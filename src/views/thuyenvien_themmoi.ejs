    <style>
        /* Remove form section hiding */
        .form-section {
            display: block; /* Show all sections instead of hiding them */
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid #e3e6f0;
        }
        
        /* Remove the .active class since we don't need it anymore */
        .form-section.active {
            display: block;
        }
        
        /* Add section heading styles */
        .section-heading {
            background-color: #f8f9fc;
            padding: 10px 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            border-left: 4px solid #4e73df;
        }
        
        .crew-photo-upload {
            width: 150px;
            height: 180px;
            border: 2px dashed #ccc;
            border-radius: 5px;
            margin: 0 auto 15px;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .crew-photo-upload img {
            max-width: 100%;
            max-height: 100%;
        }
        .crew-photo-upload .upload-icon {
            font-size: 40px;
            color: #ccc;
        }
        .photo-upload-btn {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(0,0,0,0.6);
            color: white;
            text-align: center;
            padding: 5px;
            cursor: pointer;
        }
        .photo-upload-btn:hover {
            background: rgba(0,0,0,0.8);
        }
        #photoInput {
            display: none;
        }
        .step-indicator {
            margin-bottom: 20px;
        }
        .step-indicator .step {
            display: inline-block;
            width: 30px;
            height: 30px;
            margin: 0 5px;
            background: #f8f9fc;
            border: 1px solid #ddd;
            border-radius: 50%;
            text-align: center;
            line-height: 30px;
            color: #888;
            position: relative;
        }
        .step-indicator .step.active {
            background: #4e73df;
            border-color: #4e73df;
            color: white;
        }
        .step-indicator .step-label {
            display: block;
            text-align: center;
            margin-top: 5px;
            font-size: 12px;
            color: #888;
        }
        .step-indicator .step.active .step-label {
            color: #4e73df;
            font-weight: bold;
        }
        .form-navigation {
            margin-top: 20px;
            display: flex;
            justify-content: space-between;
        }
        .field-required::after {
            content: " *";
            color: red;
        }
        .certificate-row {
            background-color: #f8f9fc;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 15px;
            position: relative;
        }
        .remove-certificate {
            position: absolute;
            top: 5px;
            right: 5px;
            color: #e74a3b;
            cursor: pointer;
        }
    </style>
</head>

