    <script>
        $(document).ready(function() {
            $('#crew_photo').change(function() {
                const file = this.files[0];
                if (file) {
                    if (file.size > 5 * 1024 * 1024) {
                        alert('Kích thước ảnh quá lớn. Tối đa 5MB.');
                        this.value = '';
                        return;
                    }
                    
                    const validTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                    if (!validTypes.includes(file.type)) {
                        alert('Chỉ chấp nhận định dạng JPG, JPEG hoặc PNG.');
                        this.value = '';
                        return;
                    }
                    
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#previewImage').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(file);
                    
                    $(this).next('.custom-file-label').html(file.name);
                }
            });
            
            
            let languageCertCount = 0;
            
            $('#addLanguageCert').click(function() {
                languageCertCount++;
                const newCert = $('#languageCert0').clone();
                newCert.attr('id', `languageCert${languageCertCount}`);
                
                newCert.find('input[type="text"], input[type="number"], input[type="date"]').val('');
                newCert.find('input[type="file"]').val('');
                
                newCert.append(`
                    <span class="remove-certificate" data-target="languageCert${languageCertCount}">
                        <i class="fas fa-times-circle"></i>
                    </span>
                `);
                
                $('#languageCertificates').append(newCert);
            });
            
            function loadCertificates() {
                $.ajax({
                    url: '/api/chung-chi',
                    type: 'GET',
                    success: function(certificates) {
                        $('.certificate-select').each(function() {
                            const select = $(this);
                            const currentValue = select.val(); 
                            
                            const firstOption = select.find('option:first');
                            select.empty().append(firstOption);
                            
                            certificates.forEach(function(cert) {
                                select.append(`<option value="${cert.id_chungchi}">${cert.tenchungchi}</option>`);
                            });
                            
                            if (currentValue) {
                                select.val(currentValue);
                            }
                        });
                    },
                    error: function() {
                        console.error('Failed to load certificates');
                    }
                });
            }
            
            loadCertificates();
            
            let crewCertCount = 0;
            
            $('#addCrewCert').click(function() {
                crewCertCount++;
                const newCert = $('#crewCert0').clone();
                newCert.attr('id', `crewCert${crewCertCount}`);
                
                newCert.find('input[type="text"], input[type="number"], input[type="date"]').val('');
                newCert.find('input[type="file"]').val('');
                newCert.find('select').val(''); 
                
                newCert.append(`
                    <span class="remove-certificate" data-target="crewCert${crewCertCount}">
                        <i class="fas fa-times-circle"></i>
                    </span>
                `);
                
                $('#crewCertificates').append(newCert);

                loadCertificates();
            });
            
            $(document).on('click', '.remove-certificate', function() {
                const targetId = $(this).data('target');
                $(`#${targetId}`).remove();
            });
            
            $('#crewForm').on('submit', function(e) {
                let isValid = true;
                $(this).find('[required]').each(function() {
                    if (!$(this).val()) {
                        $(this).addClass('is-invalid');
                        isValid = false;
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });
                
                if (!isValid) {
                    e.preventDefault();
                    alert('Vui lòng điền đầy đủ các trường bắt buộc!');
                    $('html, body').animate({
                        scrollTop: $('.is-invalid:first').offset().top - 100
                    }, 500);
                    return false;
                }
                
                return true;
            });
        });
    </script>
