                <div class="container-fluid">
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Bảng Lương Thuyền Viên</h1>
                    </div>

                    <!-- Tab nút -->
                    <ul class="nav nav-tabs mb-3" id="mainTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="crew-tab" data-bs-toggle="tab" data-bs-target="#crew"
                                type="button" role="tab">
                                🧭 Thuyền viên đang trên tàu
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="salary-tab" data-bs-toggle="tab"
                                data-bs-target="#salary" type="button" role="tab">
                                💰 Bảng lương
                            </button>
                        </li>
                    </ul>

                    <!-- Tab nội dung -->
                    <div class="tab-content">
                        <div class="tab-pane fade" id="crew" role="tabpanel">
                            Nội dung thuyền viên...
                        </div>

                        <div class="tab-pane fade show active" id="salary" role="tabpanel">
                            <div class="card shadow">
                                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                                    <h6 class="m-0 font-weight-bold text-primary">Bảng lương chi tiết</h6>

                                    <!-- Bọc 2 nút trong một div để căn phải -->
                                    <div>
                                        <button class="btn btn-success btn-sm me-2"
                                            onclick="openEditLuong('<%= dataTable.id_bangluong %>', '<%= dataTable.luongcb %>', '<%= dataTable.tigia %>', '<%= dataTable.tongtien %>', '<%= dataTable.phuongthuc %>')">Cập
                                            nhật lương</button>
                                        <button class="btn btn-warning btn-sm"
                                            onclick="openEditNganHang('<%= dataTable.id_bangluong %>', '<%= dataTable.thuyenvien_id %>', '<%= dataTable.thuyenvien?.taikhoannganhang?.tennganhang %>', '<%= dataTable.thuyenvien?.taikhoannganhang?.stk %>', '<%= dataTable.thuyenvien?.taikhoannganhang?.tentaikhoan %>')">Cập
                                            nhật ngân hàng</button>

                                        <!-- Modal edit Lương -->
                                        <div class="modal fade" id="editModalLuong" tabindex="-1" role="dialog">
                                            <div class="modal-dialog" role="document">
                                                <form id="editLuongForm" action="/put-bangluong" method="POST">

                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title text-primary">Cập nhật bảng lương
                                                            </h5>
                                                            <button type="button" class="close"
                                                                data-dismiss="modal">&times;</button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <input type="hidden" id="editIdLuong" name="id_bangluong">
                                                            <div class="form-group">
                                                                <label class="text-primary">Lương cơ bản</label>
                                                                <input type="text" class="form-control" id="editLuongCB"
                                                                    name="luongcb" required>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="text-primary">Tỉ giá</label>
                                                                <input type="text" class="form-control" id="editTiGia"
                                                                    name="tigia" required>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="text-primary">Tổng lương</label>
                                                                <input type="text" class="form-control"
                                                                    id="editTongTien" name="tongtien" required>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="text-primary">Phương thức</label>
                                                                <select class="form-control" id="editPhuongThuc"
                                                                    name="phuongthuc" required>
                                                                    <option>Ngày xuất cảnh</option>
                                                                    <option>Ngày lên tàu</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="submit" class="btn btn-primary">Cập
                                                                nhật</button>
                                                            <button type="button" class="btn btn-secondary"
                                                                data-dismiss="modal">Đóng</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                        <!-- Modal edit Ngân Hàng -->
                                        <div class="modal fade" id="editModalNganHang" tabindex="-1" role="dialog">
                                            <div class="modal-dialog" role="document">
                                                <form id="editNganHangForm" action="/put-nganhang" method="POST">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title text-primary">Cập nhật ngân hàng</h5>
                                                            <button type="button" class="close"
                                                                data-dismiss="modal">&times;</button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <input type="hidden" id="editIdLuongNH" name="id_bangluong">
                                                            <input type="hidden" id="editIdNganHang"
                                                                name="thuyenvien_id">
                                                            <div class="form-group">
                                                                <label class="text-primary">Tên ngân hàng</label>
                                                                <input type="text" class="form-control"
                                                                    id="editTenNganHang" name="tennganhang" required>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="text-primary">Số tài khoản</label>
                                                                <input type="text" class="form-control" id="editSTK"
                                                                    name="stk" required>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="text-primary">Tên tài khoản</label>
                                                                <input type="text" class="form-control"
                                                                    id="editTenTaiKhoan" name="tentaikhoan" required>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="submit" class="btn btn-primary">Cập
                                                                nhật</button>
                                                            <button type="button" class="btn btn-secondary"
                                                                data-dismiss="modal">Đóng</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                        <% if (dataTable.tinhtrang==='Chưa thanh toán' ) { %>
                                            <form method="POST" action="/xuly-thanhtoan" onsubmit="return thanhToan()">
                                                <input type="hidden" name="bangluong_id"
                                                    value="<%= dataTable.id_bangluong %>">
                                                <button class="btn btn-danger btn-sm" type="submit">Thanh toán</button>
                                            </form>
                                            <% } else { %>
                                                <form method="POST" action="/xuly-thanhtoan"
                                                    onsubmit="return huyThanhToan()">
                                                    <input type="hidden" name="bangluong_id"
                                                        value="<%= dataTable.id_bangluong %>">
                                                    <button class="btn btn-danger btn-sm" type="submit">Hủy thanh
                                                        toán</button>
                                                </form>
                                                <% } %>


                                    </div>
                                </div>

                                <div class="card-body">
                                    <table class="table table-bordered table-hover">
                                        <tbody>
                                            <tr>
                                                <th scope="row">Mã thuyền viên</th>
                                                <td>
                                                    <%= dataTable.thuyenvien_id %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Họ và tên</th>
                                                <td>
                                                    <%= dataTable.thuyenvien?.hoten %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Lương cơ bản</th>
                                                <td>
                                                    <%= formatDecimal(dataTable.luongcb) %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Hệ số quy đổi</th>
                                                <td>
                                                    <%= formatDecimal(dataTable.tigia) %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Số ngày công</th>
                                                <td>
                                                    <%= dataTable.socong %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Tổng tiền lương</th>
                                                <td>
                                                    <%= formatDecimal(dataTable.tongtien) %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Tháng</th>
                                                <td>
                                                    <%= formatTime(dataTable.thoigian) %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Ngân hàng</th>
                                                <td>
                                                    <%= dataTable.thuyenvien?.taikhoannganhang?.tennganhang %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Số tài khoản</th>
                                                <td>
                                                    <%= dataTable.thuyenvien?.taikhoannganhang?.stk %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Tên tài khoản</th>
                                                <td>
                                                    <%= dataTable.thuyenvien?.taikhoannganhang?.tentaikhoan %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Phương thức tính lương</th>
                                                <td>
                                                    <%= dataTable.phuongthuc %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Trạng thái bảng lương</th>
                                                <td>
                                                    <%= dataTable.tinhtrang %>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; PITSCO Crew Management System 2025 </span>
                        </div>
                    </div>
                </footer>

            </div>

        </div>

        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Bạn chắc chắc muốn rời đi?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Chọn "Đăng xuất" bên dưới nếu bạn sẵn sàng kết thúc phiên hiện tại của mình.
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                        <a class="btn btn-primary" href="/login">Đăng xuất</a>
                    </div>
                </div>
            </div>
        </div>
        <script>
            function openEditLuong(id, luongcb, tigia, tongtien, phuongthuc) {
                document.getElementById('editIdLuong').value = id;
                document.getElementById('editLuongCB').value = luongcb;
                document.getElementById('editTiGia').value = tigia;
                document.getElementById('editTongTien').value = tongtien;
                document.getElementById('editPhuongThuc').value = phuongthuc;
                $('#editModalLuong').modal('show');
            }

            function openEditNganHang(idluong, idnganhang, tennganhang, stk, tentaikhoan) {
                document.getElementById('editIdLuongNH').value = idluong;
                document.getElementById('editIdNganHang').value = idnganhang;
                document.getElementById('editTenNganHang').value = tennganhang;
                document.getElementById('editSTK').value = stk;
                document.getElementById('editTenTaiKhoan').value = tentaikhoan;
                $('#editModalNganHang').modal('show');
            }

            function thanhToan() {
                if (!confirm('Bạn có chắc đã thanh toán chưa?')) {
                    return;
                }
            }

            function huyThanhToan() {
                if (!confirm('Bạn có chắc muốn hủy thanh toán không?')) {
                    return;
                }
            }
        </script>
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <script src="js/style.js"></script>

        <script src="vendor/datatables/jquery.dataTables.min.js"></script>
        <script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

        <script src="js/demo/datatables-demo.js"></script>

</body>

</html>