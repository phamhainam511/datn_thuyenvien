<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>PITSCO Crew Management System - Users</title>

    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <link href="/css/style.css" rel="stylesheet">

    <!-- Include header partial -->
    <%- include('partials/header', { title: 'Thông tin thuyền viên', baseUrl: '/' }) %>

</head>

<body id="page-top">

    <div id="wrapper">

        <!-- Include sidebar partial -->
        <%- include('partials/sidebar', { activeMenu: 'crews', baseUrl: '/' }) %>

        <div id="content-wrapper" class="d-flex flex-column">

            <div id="content">

                <!-- Include topbar partial -->
                <%- include('partials/topbar', { baseUrl: '/' }) %>
                
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Thông tin thuyền viên</h1>
                        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                            <i class="fas fa-file-export fa-sm text-white-50"></i> Xuất thông tin
                        </a>
                    </div>

                    <!-- Tabs -->
                    <ul class="nav nav-tabs" id="crewTabs">
                        <li class="nav-item">
                            <a class="nav-link active" id="personal-tab" data-toggle="tab" href="#personal-info"
                                role="tab">Thông tin cá nhân</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="family-tab" data-toggle="tab" href="#family-info" role="tab">Thông
                                tin gia đình</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="education-tab" data-toggle="tab" href="#education-info"
                                role="tab">Học vấn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="language-tab" data-toggle="tab" href="#language-certificates"
                                role="tab">Chứng chỉ ngoại ngữ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="certificates-tab" data-toggle="tab" href="#crew-certificates"
                                role="tab">Chứng chỉ thuyền viên</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="history-tab" data-toggle="tab" href="#sailing-history"
                                role="tab">Lịch sử đi tàu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="attachments-tab" data-toggle="tab" href="#crew-attachments"
                                role="tab">Tài liệu đính kèm</a>
                        </li>
                    </ul>

                    <!-- Nội dung tab sẽ được load vào đây -->
                    <div class="tab-content mt-3">
                        <!-- Personal Info Tab -->
                        <div class="tab-pane fade show active" id="personal-info" role="tabpanel"
                            aria-labelledby="personal-tab">
                            <div class="card shadow mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <!-- Ảnh thuyền viên & trạng thái -->
                                        <div class="col-md-3 text-center">
                                            <img src="<%= thuyenvieninfo.anh ? thuyenvieninfo.anh : '/img/crew_test1.jpg' %>" alt="Ảnh thuyền viên"
                                                class="crew-photo mb-2">
                                            <h5 class="fw-bold">
                                                <%= thuyenvieninfo.hoten %>
                                            </h5>
                                            <p class="text-muted">Chức vụ: test</p>
                                            
                                            <!-- Upload photo button -->
                                            <form action="/upload-anh-thuyen-vien/<%= thuyenvieninfo.id_thuyenvien %>" method="POST" enctype="multipart/form-data" class="mb-3">
                                                <div class="custom-file mb-2">
                                                    <input type="file" class="custom-file-input" id="crew_photo" name="crew_photo" accept=".jpg,.jpeg,.png">
                                                    <label class="custom-file-label" for="crew_photo">Chọn ảnh...</label>
                                                </div>
                                                <button type="submit" class="btn btn-sm btn-info">
                                                    <i class="fas fa-upload"></i> Cập nhật ảnh
                                                </button>
                                            </form>
                                            
                                            <!-- Update this section to show actual status with appropriate styling -->
                                            <% let statusClass = ''; %>
                                            <% if(thuyenvieninfo.trangthai === 'Đang trên tàu') { %>
                                                <% statusClass = 'active'; %>
                                            <% } else if(thuyenvieninfo.trangthai === 'Đang chờ tàu') { %>
                                                <% statusClass = 'waiting'; %>
                                            <% } else { %>
                                                <% statusClass = 'inactive'; %>
                                            <% } %>
                                            <p class="status <%= statusClass %>"><%= thuyenvieninfo.trangthai %></p>
                                            
                                            <!-- Nút cập nhật -->
                                            <div class="text-center mt-4">
                                                <button type="button" class="btn btn-primary btn-lg" id="btnUpdate"
                                                    data-toggle="modal" data-target="#updateStatusModal">
                                                    Cập nhật trạng thái
                                                </button>
                                            </div>
                                        </div>

                                        <!-- Thông tin cá nhân -->
                                        <div class="col-md-9">
                                            <h5 class="text-primary d-inline-block">Thông tin cá nhân</h5>
                                            <a href="#" class="ml-2" data-toggle="modal" data-target="#editModal">
                                                <i class="fas fa-edit text-primary" style="font-size: 20px;"></i>
                                            </a>
                                            <ul class="list-group mb-3">
                                                <li class="list-group-item"><strong>Họ và tên:</strong> <span
                                                        id="fullName">
                                                        <%= thuyenvieninfo.hoten %>
                                                    </span></li>
                                                <li class="list-group-item"><strong>Ngày sinh:</strong> <span id="dob">
                                                        <%= thuyenvieninfo.ngaysinh %>
                                                    </span></li>
                                                <li class="list-group-item"><strong>CCCD:</strong> <span id="idNumber">
                                                        <%= thuyenvieninfo.cccd %>
                                                    </span></li>
                                                <li class="list-group-item"><strong>Chiều cao:</strong> <span
                                                        id="height">
                                                        <%= thuyenvieninfo.chieucao %> cm
                                                    </span></li>
                                                <li class="list-group-item"><strong>Cân nặng:</strong> <span
                                                        id="weight">
                                                        <%= thuyenvieninfo.cannang %> kg
                                                    </span></li>
                                                <li class="list-group-item"><strong>Nhóm máu:</strong> <span
                                                        id="bloodType">
                                                        <%= thuyenvieninfo.nhommau %>
                                                    </span></li>
                                                <li class="list-group-item"><strong>Size giày:</strong> <span
                                                        id="shoeSize">
                                                        <%= thuyenvieninfo.sizegiay %>
                                                    </span></li>
                                                <li class="list-group-item"><strong>Size giày bảo hộ:</strong> <span
                                                        id="safetyShoeSize">
                                                        <%= thuyenvieninfo.sizegiaybaoho %>
                                                    </span></li>
                                                <li class="list-group-item"><strong>Email:</strong> <span id="email">
                                                        <%= thuyenvieninfo.email %>
                                                    </span></li>
                                                <li class="list-group-item"><strong>Số điện thoại:</strong> <span
                                                        id="phone">
                                                        <%= thuyenvieninfo.sodienthoai %>
                                                    </span></li>
                                                <li class="list-group-item"><strong>Tình trạng hôn nhân:</strong> <span
                                                        id="maritalStatus">
                                                        <%= thuyenvieninfo.tinhtranghonnhan %>
                                                    </span></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Family Info Tab -->
                        <div class="tab-pane fade" id="family-info" role="tabpanel" aria-labelledby="family-tab">
                            <div class="card shadow mb-4">
                                <div class="card-body">
                                    <h5 class="text-primary d-inline-block">Thông tin gia đình</h5>
                                    <a href="#" class="ml-2" data-toggle="modal" data-target="#editFamilyModal">
                                        <i class="fas fa-edit text-primary" style="font-size: 20px;"></i>
                                    </a>
                                    <ul class="list-group mb-3">
                                        <li class="list-group-item"><strong>Họ tên bố:</strong> <span>
                                                <%= nhanthanthuyenvieninfo.hotenbo %>
                                            </span></li>
                                        <li class="list-group-item"><strong>Số điện thoại bố:</strong> <span>
                                                <%= nhanthanthuyenvieninfo.sdtbo %>
                                            </span></li>
                                        <li class="list-group-item"><strong>Họ tên mẹ:</strong> <span>
                                                <%= nhanthanthuyenvieninfo.hotenme %>
                                            </span></li>
                                        <li class="list-group-item"><strong>Số điện thoại mẹ:</strong> <span>
                                                <%= nhanthanthuyenvieninfo.sdtme %>
                                            </span></li>
                                        <li class="list-group-item"><strong>Họ tên vợ:</strong> <span>
                                                <%= nhanthanthuyenvieninfo.hotenvo %>
                                            </span></li>
                                        <li class="list-group-item"><strong>Số điện thoại vợ:</strong> <span>
                                                <%= nhanthanthuyenvieninfo.sdtvo %>
                                            </span></li>
                                        <li class="list-group-item"><strong>Họ tên người giám hộ:</strong> <span>
                                                <%= nhanthanthuyenvieninfo.nguoigiamho %>
                                            </span></li>
                                        <li class="list-group-item"><strong>Số điện thoại người giám hộ:</strong> <span>
                                                <%= nhanthanthuyenvieninfo.sdtgiamho %>
                                            </span></li>
                                        <li class="list-group-item"><strong>Địa chỉ:</strong> <span>
                                                <%= nhanthanthuyenvieninfo.diachi %>
                                            </span></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Education Info Tab -->
                        <div class="tab-pane fade" id="education-info" role="tabpanel" aria-labelledby="education-tab">
                            <div class="card shadow mb-4">
                                <div class="card-body">
                                    <h5 class="text-primary d-inline-block">Thông tin học vấn</h5>
                                    <% if (!hocvaninfo) { %>
                                    <a href="#" class="ml-2" data-toggle="modal" data-target="#addEducationModal">
                                        <i class="fas fa-plus-circle text-success" style="font-size: 20px;"></i>
                                    </a>
                                    <% } else { %>
                                    <a href="#" class="ml-2 editEducationBtn" data-toggle="modal" data-target="#editEducationModal"
                                        data-id="<%= hocvaninfo.id %>"
                                        data-school="<%= hocvaninfo.truongdaotao %>"
                                        data-program="<%= hocvaninfo.hedaotao %>"
                                        data-year="<%= hocvaninfo.namtotnghiep %>">
                                        <i class="fas fa-edit text-primary" style="font-size: 20px;"></i>
                                    </a>
                                    <% } %>
                                    
                                    <% if (!hocvaninfo) { %>
                                        <div class="alert alert-info mt-3">
                                            <p class="mb-0">Chưa có thông tin học vấn. Vui lòng thêm thông tin học vấn cho thuyền viên.</p>
                                        </div>
                                    <% } else { %>
                                        <ul class="list-group mt-3">
                                            <li class="list-group-item"><strong>Trường đào tạo:</strong> <%= hocvaninfo.truongdaotao %></li>
                                            <li class="list-group-item"><strong>Hệ đào tạo:</strong> <%= hocvaninfo.hedaotao %></li>
                                            <li class="list-group-item"><strong>Năm tốt nghiệp:</strong> <%= hocvaninfo.namtotnghiep %></li>
                                        </ul>
                                        
                                        <div class="mt-3">
                                            <a href="/xoa-hoc-van/<%= hocvaninfo.id %>/<%= thuyenvieninfo.id_thuyenvien %>" 
                                               class="btn btn-sm btn-danger" 
                                               onclick="return confirm('Bạn có chắc chắn muốn xóa thông tin học vấn này?')">
                                                <i class="fas fa-trash"></i> Xóa thông tin học vấn
                                            </a>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- Language Certificates Tab -->
                        <div class="tab-pane fade" id="language-certificates" role="tabpanel"
                            aria-labelledby="language-tab">
                            <div class="card shadow mb-4">
                                <div class="card-body">
                                    <h5 class="text-primary d-inline-block">Chứng chỉ ngoại ngữ</h5>
                                    <a href="#" class="ml-2" data-toggle="modal" data-target="#addLanguageModal">
                                        <i class="fas fa-plus-circle text-success" style="font-size: 20px;"></i>
                                    </a>
                                    
                                    <% if (!ngoainguinfo || ngoainguinfo.length === 0) { %>
                                        <div class="alert alert-info mt-3">
                                            <p class="mb-0">Chưa có chứng chỉ ngoại ngữ. Vui lòng thêm chứng chỉ ngoại ngữ cho thuyền viên.</p>
                                        </div>
                                    <% } else { %>
                                        <div class="table-responsive mt-3">
                                            <table class="table table-bordered">
                                                <thead class="table-secondary">
                                                    <tr>
                                                        <th>Ngôn ngữ</th>
                                                        <th>Tên chứng chỉ</th>
                                                        <th>Điểm số</th>
                                                        <th>Ngày cấp</th>
                                                        <th>Ngày hết hạn</th>
                                                        <th>File đính kèm</th>
                                                        <th>Thao tác</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for (let i = 0; i < ngoainguinfo.length; i++) { %>
                                                        <tr>
                                                            <td><%= ngoainguinfo[i].ngonngu %></td>
                                                            <td><%= ngoainguinfo[i].tenchungchi %></td>
                                                            <td><%= ngoainguinfo[i].diemso %></td>
                                                            <td>
                                                                <% if (ngoainguinfo[i].ngaycap) { %>
                                                                    <% 
                                                                    // Safely format the date regardless of type
                                                                    let ngaycap = ngoainguinfo[i].ngaycap;
                                                                    let formattedDate;
                                                                    if (typeof ngaycap === 'string') {
                                                                        formattedDate = ngaycap.split('T')[0];
                                                                    } else if (ngaycap instanceof Date) {
                                                                        formattedDate = ngaycap.toISOString().split('T')[0];
                                                                    } else {
                                                                        formattedDate = ngaycap;
                                                                    }
                                                                    %>
                                                                    <%= formattedDate %>
                                                                <% } else { %>
                                                                    N/A
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <% if (ngoainguinfo[i].ngayhethan) { %>
                                                                    <% 
                                                                    // Safely format the date regardless of type
                                                                    let ngayhethan = ngoainguinfo[i].ngayhethan;
                                                                    let formattedDate;
                                                                    if (typeof ngayhethan === 'string') {
                                                                        formattedDate = ngayhethan.split('T')[0];
                                                                    } else if (ngayhethan instanceof Date) {
                                                                        formattedDate = ngayhethan.toISOString().split('T')[0];
                                                                    } else {
                                                                        formattedDate = ngayhethan;
                                                                    }
                                                                    %>
                                                                    <%= formattedDate %>
                                                                <% } else { %>
                                                                    N/A
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <% if (ngoainguinfo[i].file) { %>
                                                                    <a href="<%= ngoainguinfo[i].file %>" target="_blank" class="btn btn-sm btn-info">
                                                                        <i class="fas fa-file-download"></i> Xem
                                                                    </a>
                                                                <% } else { %>
                                                                    Không có file
                                                                <% } %>
                                                            </td>
                                                            <td class="text-center">
                                                                <button 
                                                                    class="btn btn-sm btn-warning editLanguageBtn"
                                                                    data-id="<%= ngoainguinfo[i].id %>"
                                                                    data-language="<%= ngoainguinfo[i].ngonngu %>"
                                                                    data-certificate="<%= ngoainguinfo[i].tenchungchi %>"
                                                                    data-score="<%= ngoainguinfo[i].diemso %>"
                                                                    data-issued="<%= ngoainguinfo[i].ngaycap ? (typeof ngoainguinfo[i].ngaycap === 'string' ? ngoainguinfo[i].ngaycap.split('T')[0] : (ngoainguinfo[i].ngaycap instanceof Date ? ngoainguinfo[i].ngaycap.toISOString().split('T')[0] : ngoainguinfo[i].ngaycap)) : '' %>"
                                                                    data-expired="<%= ngoainguinfo[i].ngayhethan ? (typeof ngoainguinfo[i].ngayhethan === 'string' ? ngoainguinfo[i].ngayhethan.split('T')[0] : (ngoainguinfo[i].ngayhethan instanceof Date ? ngoainguinfo[i].ngayhethan.toISOString().split('T')[0] : ngoainguinfo[i].ngayhethan)) : '' %>"
                                                                    data-file="<%= ngoainguinfo[i].file %>"
                                                                    data-toggle="modal"
                                                                    data-target="#editLanguageModal">
                                                                    <i class="fas fa-edit"></i>
                                                                </button>
                                                                <a href="/xoa-ngoai-ngu/<%= ngoainguinfo[i].id %>/<%= thuyenvieninfo.id_thuyenvien %>" 
                                                                   class="btn btn-sm btn-danger" 
                                                                   onclick="return confirm('Bạn có chắc chắn muốn xóa chứng chỉ này?')">
                                                                    <i class="fas fa-trash"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- Crew Certificates Tab -->
                        <div class="tab-pane fade" id="crew-certificates" role="tabpanel"
                            aria-labelledby="certificates-tab">
                            <div class="card shadow mb-4">
                                <div class="card-body">
                                    <h5 class="text-primary d-inline-block">Chứng chỉ thuyền viên</h5>
                                    <a href="#" class="ml-2" data-toggle="modal" data-target="#addCrewCertModal">
                                        <i class="fas fa-plus-circle text-success" style="font-size: 20px;"></i>
                                    </a>
                                    
                                    <% if (!chungchiinfo || chungchiinfo.length === 0) { %>
                                        <div class="alert alert-info mt-3">
                                            <p class="mb-0">Chưa có chứng chỉ thuyền viên. Vui lòng thêm chứng chỉ cho thuyền viên.</p>
                                        </div>
                                    <% } else { %>
                                        <div class="table-responsive mt-3">
                                            <table class="table table-bordered">
                                                <thead class="table-secondary">
                                                    <tr>
                                                        <th>Tên chứng chỉ</th>
                                                        <th>Số hiệu</th>
                                                        <th>Ngày cấp</th>
                                                        <th>Ngày hết hạn</th>
                                                        <th>Nơi cấp</th>
                                                        <th>Xếp loại</th>
                                                        <th>File đính kèm</th>
                                                        <th>Thao tác</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for (let i = 0; i < chungchiinfo.length; i++) { %>
                                                        <tr>
                                                            <td><%= chungchiinfo[i].tenchungchi %></td>
                                                            <td><%= chungchiinfo[i].sohieuchungchi %></td>
                                                            <td>
                                                                <% if (chungchiinfo[i].ngaycap) { %>
                                                                    <% 
                                                                    // Safely format the date regardless of type
                                                                    let ngaycap = chungchiinfo[i].ngaycap;
                                                                    let formattedDate;
                                                                    if (typeof ngaycap === 'string') {
                                                                        formattedDate = ngaycap.split('T')[0];
                                                                    } else if (ngaycap instanceof Date) {
                                                                        formattedDate = ngaycap.toISOString().split('T')[0];
                                                                    } else {
                                                                        formattedDate = ngaycap;
                                                                    }
                                                                    %>
                                                                    <%= formattedDate %>
                                                                <% } else { %>
                                                                    N/A
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <% if (chungchiinfo[i].ngayhethan) { %>
                                                                    <% 
                                                                    // Safely format the date regardless of type
                                                                    let ngayhethan = chungchiinfo[i].ngayhethan;
                                                                    let formattedDate;
                                                                    if (typeof ngayhethan === 'string') {
                                                                        formattedDate = ngayhethan.split('T')[0];
                                                                    } else if (ngayhethan instanceof Date) {
                                                                        formattedDate = ngayhethan.toISOString().split('T')[0];
                                                                    } else {
                                                                        formattedDate = ngayhethan;
                                                                    }
                                                                    %>
                                                                    <%= formattedDate %>
                                                                <% } else { %>
                                                                    N/A
                                                                <% } %>
                                                            </td>
                                                            <td><%= chungchiinfo[i].noicap %></td>
                                                            <td><%= chungchiinfo[i].xeploai %></td>
                                                            <td>
                                                                <% if (chungchiinfo[i].file) { %>
                                                                    <a href="<%= chungchiinfo[i].file %>" target="_blank" class="btn btn-sm btn-info">
                                                                        <i class="fas fa-file-download"></i> Xem
                                                                    </a>
                                                                <% } else { %>
                                                                    Không có file
                                                                <% } %>
                                                            </td>
                                                            <td class="text-center">
                                                                <button 
                                                                    class="btn btn-sm btn-warning editCrewCertBtn"
                                                                    data-id="<%= chungchiinfo[i].id %>"
                                                                    data-cert-name="<%= chungchiinfo[i].tenchungchi %>"
                                                                    data-cert-number="<%= chungchiinfo[i].sohieuchungchi %>"
                                                                    data-issued="<%= chungchiinfo[i].ngaycap ? (typeof chungchiinfo[i].ngaycap === 'string' ? chungchiinfo[i].ngaycap.split('T')[0] : (chungchiinfo[i].ngaycap instanceof Date ? chungchiinfo[i].ngaycap.toISOString().split('T')[0] : chungchiinfo[i].ngaycap)) : '' %>"
                                                                    data-expired="<%= chungchiinfo[i].ngayhethan ? (typeof chungchiinfo[i].ngayhethan === 'string' ? chungchiinfo[i].ngayhethan.split('T')[0] : (chungchiinfo[i].ngayhethan instanceof Date ? chungchiinfo[i].ngayhethan.toISOString().split('T')[0] : chungchiinfo[i].ngayhethan)) : '' %>"
                                                                    data-issuer="<%= chungchiinfo[i].noicap %>"
                                                                    data-rank="<%= chungchiinfo[i].xeploai %>"
                                                                    data-file="<%= chungchiinfo[i].file %>"
                                                                    data-toggle="modal"
                                                                    data-target="#editCrewCertModal">
                                                                    <i class="fas fa-edit"></i>
                                                                </button>
                                                                <a href="/xoa-chung-chi/<%= chungchiinfo[i].id %>/<%= thuyenvieninfo.id_thuyenvien %>" 
                                                                   class="btn btn-sm btn-danger" 
                                                                   onclick="return confirm('Bạn có chắc chắn muốn xóa chứng chỉ này?')">
                                                                    <i class="fas fa-trash"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- Sailing History Tab -->
                        <div class="tab-pane fade" id="sailing-history" role="tabpanel" aria-labelledby="history-tab">
                            <div id="tab-content" class="card shadow mb-4">
                                <div class="card-body">
                                    <h5 class="text-primary d-inline-block">Lịch sử đi tàu</h5>
                                    <a href="#" class="ml-2" data-toggle="modal" data-target="#addShipHistoryModal">
