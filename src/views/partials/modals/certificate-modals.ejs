                <input type="hidden" id="deleteCertificateId">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                <button id="confirmDeleteBtn" class="btn btn-danger">Xóa</button>
            </div>
        </div>
    </div>
</div>
